# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# ⚠️  CRITICAL: NEVER commit this file with real values!
# ⚠️  Use secrets management (AWS Secrets Manager, Vault, etc.)
# ============================================

# Application
APP_ENV=production
APP_NAME=Event Ticketing API
APP_VERSION=1.0.0
PORT=8080

# Database (PostgreSQL)
# Use managed database service (AWS RDS, GCP Cloud SQL, etc.)
# Generate strong password: openssl rand -base64 48
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=5432
DB_USER=event_user_prod
DB_PASSWORD=USE_SECRETS_MANAGER_OR_VAULT
DB_NAME=event_ticketing_prod
DB_SSLMODE=require

# Redis
# Use managed Redis service (AWS ElastiCache, Redis Cloud, etc.)
# Generate strong password: openssl rand -base64 48
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=USE_SECRETS_MANAGER_OR_VAULT
REDIS_DB=0

# Server
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# Security
# Generate strong secrets: openssl rand -hex 64
JWT_SECRET=USE_SECRETS_MANAGER_OR_VAULT
JWT_EXPIRY=24h
API_KEY=USE_SECRETS_MANAGER_OR_VAULT
ENCRYPTION_KEY=USE_SECRETS_MANAGER_OR_VAULT

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_OUTPUT=stdout

# CORS (Production domains only)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BURST=10

# Monitoring & Observability
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Email/Notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# AWS (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=USE_IAM_ROLES_INSTEAD
AWS_SECRET_ACCESS_KEY=USE_IAM_ROLES_INSTEAD

# Feature Flags
FEATURE_PAYMENT_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# Session
SESSION_SECRET=USE_SECRETS_MANAGER_OR_VAULT
SESSION_TIMEOUT=3600

# TLS/SSL
TLS_CERT_PATH=/etc/ssl/certs/api-cert.pem
TLS_KEY_PATH=/etc/ssl/private/api-key.pem
